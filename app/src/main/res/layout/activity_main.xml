<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <Button
        android:id="@+id/btnCalculatorApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator App"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/btnFunFact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fun Fact App"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/btnWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/btnDrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drawer Layout"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>


    <Button
        android:id="@+id/btnHeroesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heroes List"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>


    <Button
        android:id="@+id/btnPrefsExample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prefs example"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/btnLoginActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login activity"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/btnJsonParserActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Json Parser"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/btnWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Web View"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>
    <Button
        android:id="@+id/btnShowAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Ad"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>
    <Button
        android:id="@+id/btnMultiLanguageActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multi Language"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/btnAnimationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animations"
        android:textSize="20sp"
        android:textColor="@color/colorGreen"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

    </LinearLayout>


</ScrollView>